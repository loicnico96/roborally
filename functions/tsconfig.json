{
  "compilerOptions": {
    "baseUrl": "src",
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "paths": {
      "common/*": ["./common/*"]
    }
  },
  "compileOnSave": true,
  "include": ["src"]
}
