rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /board/{boardId} {
      allow read: if true;
      allow write: if false;
    }
    match /client/{gameId} {
      allow read: if true;
      allow write: if false;
    }
    match /room/{roomId} {
      allow read: if true;
      allow write: if false;
    }
    match /server/{gameId} {
      allow read: if false;
      allow write: if false;
    }
  }
}